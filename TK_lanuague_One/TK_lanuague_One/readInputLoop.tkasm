read %int32            // Read an integer from input
label2:
print "Current value: "
print.pop %int32       // Print the current value
push %int32 1          // Push 1 onto the stack
sub %int32 %int32      // Subtract 1 from the current value
jump.equals.0 %int32 end  // If the result is 0, jump to the end
jump label2            // Jump back to label2
end:
print "Loop ended"
halt                   // Stop the program